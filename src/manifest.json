{
    "manifest_version": 3,
    "name": "Imperial to Metric",
    "version": "1.1",
    "description": "Convert American units to metric with ease. Perfect for int users adjusting to US measurements, or Americans exploring metric",
    "permissions": ["scripting"],
    "host_permissions": ["<all_urls>"],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
